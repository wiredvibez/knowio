rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile photos
    match /users/{uid}/profile/{file} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && uid == request.auth.uid &&
        request.resource.contentType.matches('image/.*') &&
        request.resource.size < 10 * 1024 * 1024;
    }
    match /users/{ownerUid}/entities/{entityId}/photos/{file} {
      allow read: if request.auth != null && (
        get(/databases/(default)/documents/entities/$(entityId)).data.owner_id == request.auth.uid ||
        (request.auth.uid in get(/databases/(default)/documents/entities/$(entityId)).data.viewer_ids)
      );
      allow write: if request.auth != null && ownerUid == request.auth.uid &&
        request.resource.contentType.matches('image/.*') &&
        request.resource.size < 10 * 1024 * 1024;
    }
  }
}


